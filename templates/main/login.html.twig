{% extends 'base.html.twig' %}

{% block title %}Blog-{% endblock %}

{% block body %}



{% for type , messages in app.flashes %}
    <div class="alert alert-{{type}}" >
        {% for message in messages %}
            {{ message }}
        {% endfor %}        
    </div>
{% endfor %}


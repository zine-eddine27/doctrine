{% extends 'base.html.twig' %}

{% block title %}Blog-{% endblock %}
{% form_theme formRegister 'bootstrap_4_layout.html.twig' %}
{% block body %}

    <div class="row">
        <div class="col-md-4 mt-5">
            <p class="h5"><u>Formulaire d'inscription</u></p>
            {{ form_start(formRegister) }}
            {{ form_row(formRegister.firstname, {'label' :'Prenom'}) }}
            {{ form_row(formRegister.lastname, {'label' :'Nom'}) }}
            {{ form_row(formRegister.password, {'label' :'Mot de passe'}) }}
            {{ form_row(formRegister.confirm_password, {'label' :'Confirmez le mot de passe'}) }}
            {{ form_widget(formRegister) }}             
            <button type="submit" class="btn btn-success">S'inscrire !</button>
            {{ form_end(formRegister) }}
        </div>
    </div>
    
{% endblock %}
